{
  "appId": "com.ecritisagent.app",
  "productName": "EcritisAgent",
  "copyright": "Copyright Â© 2025 EcritisAgent",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "out/**/*",
    "electron/**/*",
    "backend/**/*",
    "package.json",
    "node_modules/@mariozechner/**/*",
    "node_modules/@sinclair/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publisherName": "EcritisAgent"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "EcritisAgent",
    "artifactName": "${productName}-${version}-Setup.${ext}",
    "deleteAppDataOnUninstall": false,
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "displayLanguageSelector": false,
    "language": "2052"
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  },
  "compression": "maximum",
  "asar": false,
  "asarUnpack": [
    "**/*.node",
    "backend/**/*",
    "node_modules/@mariozechner/**/*",
    "node_modules/@sinclair/**/*"
  ],
  "extraResources": [
    {
      "from": "python-embed",
      "to": "python",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "backend",
      "to": "backend",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "node_modules/@sinclair/typebox",
      "to": "app/node_modules/@sinclair/typebox",
      "filter": [
        "**/*"
      ]
    }
  ]
}

